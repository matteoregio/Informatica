    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="Albergo JonyKebab">
      <font>
         <Font name="ArtifaktElement-Heavy" size="48.0" />
      </font>
   </Label>

          <Label alignment="TOP_CENTER" prefHeight="17.0" prefWidth="277.0" text="Inserisci due date">
      <font>
         <Font size="25.0" />
      </font>
   </Label>
   <HBox alignment="TOP_CENTER" prefHeight="39.0" prefWidth="493.0">
      <children>
         <DatePicker fx:id="d1" />
         <DatePicker fx:id="d2">
            <HBox.margin>
               <Insets left="30.0" />
            </HBox.margin>
         </DatePicker>
      </children>
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </HBox>
   <Label alignment="TOP_CENTER" prefHeight="36.0" prefWidth="390.0" text="Inserisci la fascia di prezzo">
      <font>
         <Font size="25.0" />
      </font>
   </Label>
   <ChoiceBox fx:id="choTipoPrezzo" prefHeight="25.0" prefWidth="180.0" />
    <Button onAction="#onCalcolaButtonClick" text="Calcola">
      <font>
         <Font size="17.0" />
      </font></Button>
   <VBox fx:id="prezzo" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
      <children>
         <Label text="Prezzo totale">
            <font>
               <Font size="25.0" />
            </font>
         </Label>
         <Label fx:id="lblprezzo" alignment="TOP_CENTER" text="0">
            <font>
               <Font size="39.0" />
            </font>
         </Label>
      </children>
   </VBox>
